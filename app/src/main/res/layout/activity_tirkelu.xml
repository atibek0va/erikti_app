<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="#FDEED2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#58828A"
        android:layout_marginBottom="25dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/logogogogoo" />

        <TextView
            android:id="@+id/txtKomek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Profile"
            android:textColor="#FDEED2"
            android:textSize="22dp"
            android:layout_marginLeft="70dp"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/arai"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Azimkhanova Arailym"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="18 jas, Taraz"
        android:textSize="20dp"
        android:textColor="#605757"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menin komekterim >"
        android:textColor="#000000"
        android:backgroundTint="#58828A"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menin usynystarym >"
        android:textColor="#000000"
        android:backgroundTint="#B3D2D8"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#58828A"
        >
        <ImageButton
            android:id="@+id/btnNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#395960"
            app:srcCompat="@drawable/ic_newss"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/btnMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            app:srcCompat="@drawable/ic_mapp"
            tools:ignore="VectorDrawableCompat"
            android:layout_gravity="center"
            />

        <ImageButton
            android:id="@+id/btnUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            app:srcCompat="@drawable/ic_accc"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

</LinearLayout>