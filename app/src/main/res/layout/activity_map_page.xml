<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="#FDEED2">

    <Button
        android:id="@+id/btnAlmaty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_weight="1"
        android:text="Almaty >>"

        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"

        android:drawableLeft="@drawable/ic_map"
        />

    <Button
        android:id="@+id/btnTaraz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_weight="1"
        android:text="Taraz >>"

        android:textSize="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="right"
        android:textColor="#000000"

        android:drawableLeft="@drawable/ic_map"/>

    <Button
        android:id="@+id/btnAstana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:text="Nur-Sultan >>"

        android:textSize="20dp"
        android:layout_marginBottom="40dp"
        android:textColor="#000000"

        android:drawableLeft="@drawable/ic_map"/>
    <Button
        android:id="@+id/btnShymkent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_weight="1"
        android:layout_marginRight="20dp"

        android:text="Shymkent >>"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="50dp"
        android:layout_gravity="right"

        android:drawableLeft="@drawable/ic_map"/>
    <Button
        android:id="@+id/btnAqtau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_weight="1"

        android:text="Aqtau >>"

        android:textSize="20dp"
        android:textColor="#000000"

        android:layout_marginLeft="20dp"
        android:layout_marginBottom="100dp"
        android:drawableLeft="@drawable/ic_map"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#58828A"
        >

        <ImageButton
            android:id="@+id/btnNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_newss"
            android:background="#00000000"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/btnMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#395960"
            app:srcCompat="@drawable/ic_mapp"
            tools:ignore="VectorDrawableCompat"
            android:layout_gravity="center"
            />

        <ImageButton
            android:id="@+id/btnUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            app:srcCompat="@drawable/ic_accc"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

</LinearLayout>